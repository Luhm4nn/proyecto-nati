generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Solicitud {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  telefono  String?
  mensaje   String
  estado    String   @default("pendiente")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("solicitudes")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  nombre   String

  @@map("users")
}

model Testimonio {
  id             Int      @id @default(autoincrement())
  nombreCompleto String
  texto          String
  activo         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("testimonios")
}

model Novedad {
  id             Int      @id @default(autoincrement())
  titulo         String
  descripcion    String
  imagenUrl      String
  imagenPublicId String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime

  @@map("novedades")
}

model Curso {
  id             Int            @id @default(autoincrement())
  titulo         String
  descripcion    String
  items          String[]
  activo         Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime
  dictados_curso DictadoCurso[]
}

model DictadoCurso {
  id               Int           @id @default(autoincrement())
  cursoId          Int
  horarioInicio    String
  horarioFin       String
  fechaInicio      DateTime
  fechaFin         DateTime
  duracionEstimada Int
  diasSemana       String[]
  cupos            Int           @default(0)
  activo           Boolean       @default(true)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime
  curso            Curso         @relation(fields: [cursoId], references: [id], onDelete: Cascade)
  inscripcions     Inscripcion[]
}

model Inscripcion {
  id             Int          @id @default(autoincrement())
  nombre         String
  apellido       String
  email          String
  estado         String       @default("pendiente")
  telefono       String?
  dictadoCursoId Int
  dictadoCurso   DictadoCurso @relation(fields: [dictadoCursoId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
