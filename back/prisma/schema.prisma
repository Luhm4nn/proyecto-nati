generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para almacenar las solicitudes de clases de alem√°n
model Solicitud {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  telefono  String?
  mensaje   String   @db.Text
  estado    String   @default("pendiente")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("solicitudes")
}

// Modelo para usuarios administradores
model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  nombre   String

  @@map("users")
}
