generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Solicitud {
  id        Int      @id @default(autoincrement())
  nombre    String
  email     String
  telefono  String?
  mensaje   String
  estado    String   @default("pendiente")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("solicitudes")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  nombre   String

  @@map("users")
}

model Testimonio {
  id             Int      @id @default(autoincrement())
  nombreCompleto String
  texto          String
  activo         Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("testimonios")
}

model Novedad {
  id          Int      @id @default(autoincrement())
  titulo      String
  descripcion String   @db.Text
  imagenUrl   String
  imagenPublicId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("novedades")
}

model Curso {
  id              Int             @id @default(autoincrement())
  titulo          String
  descripcion     String          @db.Text
  items           String[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  dictadosCurso   DictadoCurso[]

  @@map("cursos")
}

model DictadoCurso {
  id                Int      @id @default(autoincrement())
  cursoId           Int
  curso             Curso    @relation(fields: [cursoId], references: [id], onDelete: Cascade)
  horarioInicio     String
  horarioFin        String
  fechaInicio       DateTime
  fechaFin          DateTime
  duracionEstimada  Int
  diasSemana        String[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("dictados_curso")
}
